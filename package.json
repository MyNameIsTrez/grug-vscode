{
  "name": "grug",
  "displayName": "grug",
  "description": "The perfect modding language.",
  "version": "1.0.6",
  "repository": {
    "url": "https://github.com/MyNameIsTrez/grug-vscode"
  },
  "icon": "./grug_icon.png",
  "publisher": "MyNameIsTrez",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "grug",
        "aliases": [
          "grug"
        ],
        "extensions": [
          ".grug"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./grug_icon.png",
          "dark": "./grug_icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "grug",
        "scopeName": "source.grug",
        "path": "./syntaxes/grug.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "grug",
        "scopes": {
          "grug_on_fn": [
            "support.function.grug_on_fn"
          ],
          "grug_helper_fn": [
            "support.function.grug_helper_fn"
          ],
          "grug_game_fn": [
            "support.function.grug_game_fn"
          ]
        }
      }
    ],
    "configuration": [
      {
        "title": "grug",
        "properties": {
          "grug.pythonIndentation": {
            "type": "boolean",
            "markdownDescription": "Turn C-style `{` `}` indentation into Python-like tab indentation",
            "default": true,
            "order": 0
          },
          "grug.removeTrailingSemicolons": {
            "type": "boolean",
            "markdownDescription": "Turn `n += 2; N *= 3;` into `n += 2; n *= 3`",
            "default": true,
            "order": 1
          }
        }
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "support.function.grug_on_fn",
            "settings": {
              "foreground": "#C3E88D"
            }
          },
          {
            "scope": "support.function.grug_helper_fn",
            "settings": {
              "foreground": "#82AAFF"
            }
          },
          {
            "scope": "support.function.grug_game_fn",
            "settings": {
              "foreground": "#c792ea"
            }
          }
        ]
      }
    },
    "commands": [
      {
        "command": "grug.toggle",
        "title": "Toggle grug on/off"
      },
      {
        "command": "grug.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "postinstall": "node ./out/install.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "electron": "^22.3.5",
    "vscode-languageclient": "^9.0.1"
  }
}
