{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "grug",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#control_keywords"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#capitalized"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#lowercase"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.line",
					"match": "; .*"
				}
			]
		},
		"control_keywords": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(return|if|else|loop|break|continue)\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"match": "(define_\\w+)\\(",
					"captures": {
						"1": {
							"name": "support.function"
						}
					}
				},
				{
					"match": "(on_\\w+)\\(",
					"captures": {
						"1": {
							"name": "support.function"
						}
					}
				},
				{
					"match": "(\\w+)\\(",
					"captures": {
						"1": {
							"name": "support.function"
						}
					}
				}
			]
		},
		"types": {
			"patterns": [
				{
					"match": ": \\b(.+?)\\b",
					"captures": {
						"1": {
							"name": "storage.type"
						}
					}
				},
				{
					"name": "storage.type",
					"match": "\\b(string|i32|f64)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"capitalized": {
			"patterns": [
				{
					"name": "support.type",
					"match": "\\b[A-Z]\\w+\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b[0-9]+\\b"
				}
			]
		},
		"lowercase": {
			"patterns": [
				{
					"name": "variable.name",
					"match": "\\b(\\w)+\\b"
				}
			]
		}
	},
	"scopeName": "source.grug"
}
